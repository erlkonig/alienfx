			if [ -r $$check.err.good ] ; then \
				if diff $$check.err.good $$check.err ; then \
					$(RM) $$check.err ; \
				else \
					echo "ERROR: contradicts $$check.err.good" 1>&2 ; \
					exit 22 ; \
