			if [ -r $$check.out.good ] ; then \
				if diff $$check.out.good $$check.out ; then \
					$(RM) $$check.out ; \
				else \
					echo "ERROR: contradicts $$check.out.good" 1>&2 ; \
					exit 21 ; \
